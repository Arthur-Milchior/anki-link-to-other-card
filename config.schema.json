{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Link between note and browser",
  "properties": {
    "shortcut Browser": {
      "type": "string",
      "pattern": "^((([Cc][Tt][Rr][Ll]|[Aa][Ll][Tt]|[Ss][Hh][Ii][Ff][Tt])\\+){0,3}([a-zA-Z0-9]|F[1-9]|F1[0-2]))?$",
      "default": "Ctrl+Shift+B"
     },
    "shortcut Note ID": {
      "type": "string",
      "pattern": "^((([Cc][Tt][Rr][Ll]|[Aa][Ll][Tt]|[Ss][Hh][Ii][Ff][Tt])\\+){0,3}([a-zA-Z0-9]|F[1-9]|F1[0-2]))?$",
      "default": "Ctrl+Shift+N"
    },
    "Show button for note link": {
      "type": "boolean",
      "default": true
    },
    "Show button for browser link": {
      "type": "boolean",
      "default": true
    }
  }
}

